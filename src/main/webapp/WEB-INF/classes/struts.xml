<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="default" namespace="/" extends="struts-default">
        <interceptors>
            <interceptor name="authentication" class="interceptor.AuthenticationInterceptor"/>
        </interceptors>
        <action name="login" class="action.LoginAction" method="doLogin">
            <result name="input">/login.jsp</result>
            <result name="success" type="redirectAction">lokalen</result>
            <result name="error">/login.jsp</result>
        </action>

        <action name="lokalen" class="action.WorkspaceLoadAction">
            <interceptor-ref name="authentication"/>
            <interceptor-ref name="defaultStack"/>
            <result name="success">/lokalen.jsp</result>
            <result name="error">/error.jsp</result>
            <result name="login">/login.jsp</result>
        </action>

        <action name="register" class="action.RegisterAction">
            <result name="success">/login.jsp</result>
            <result name="error">/register.jsp</result>
        </action>

        <!-- To load -->
        <action name="reservation-form" class="action.DropdownAction">
            <result name="success">/reservation.jsp</result>
            <result name="error">/error.jsp</result>
            <result name="login">/login.jsp</result>
        </action>

        <!-- To handle  -->
        <action name="create-reservation" class="action.CreateReservationAction">
            <result name="success">load-reservations</result>
            <result name="input">/reservation.jsp</result>
            <result name="error">/error.jsp</result>
        </action>

        <action name="logout" class="action.LogoutAction">
            <result name="success">/login.jsp</result>
            <result name="error">/error.jsp</result>
        </action>

        <action name="load-reservations" class="action.ReservationsLoadAction">
            <result name="success">/dashboard.jsp</result>
            <result name="error">/error.jsp</result>
        </action>

        <action name="delete-action" class="action.DeleteReservationAction">
            <result name="success">/load-reservations.action</result>
            <result name="error">/error.jsp</result>
        </action>
    </package>
    <package name="api" namespace="/api" extends="json-default">
        <action name="workspaces" class="action.WorkspacesApiAction">
            <result type="json"/>
        </action>
    </package>
</struts>